            <div id="content" class="col-sm-9">
                {{! Everything else gets inserted here }}
                {{{body}}}
            </div>
            <div id="sidebar" class="col-sm-3">
                {{> sidebar}}
            </div>
        </div>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div id="footer-left" class="col-sm-8">
                <section class="copyright">All content copyright <a href="/">{{@blog.title}}</a> &copy; 2015 - 2016 &bull; All rights reserved.</section>
            </div>
            <div id="footer-right" class="col-sm-4">
                <section class="poweredby">Proudly published with <a href="http://ghost.org">Ghost</a> & <a href="http://ghostcloak.com">BiosVision</a>.</section>
            </div>
        </div>
    </footer>

